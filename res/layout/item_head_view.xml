<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <include layout="@layout/creator_view"/>
    
    <TextView 
        android:id="@+id/tv_collection_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_marginTop="10dip"
        />

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher"
         android:scaleType="fitCenter"
         />

    <!-- 收藏 -->

    <LinearLayout
        android:id="@+id/ll_collect_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_num_of_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/button_details_collect_default"
            android:paddingLeft="2dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人已加入专辑" 
            />
    </LinearLayout>

    <!-- 动态添加头像图片 -->

    <LinearLayout
        android:id="@+id/ll_user_collected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <!-- 喜欢 -->

    <LinearLayout
        android:id="@+id/ll_like_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_num_of_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:drawableLeft="@drawable/button_details_like_default"
            android:paddingLeft="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人已喜欢" />
    </LinearLayout>

    <!-- 动态添加头像图片 -->

    <LinearLayout
        android:id="@+id/ll_user_liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <!-- 评论 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>