<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/mm_tab_btn</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.70000005dip</item>
        <item name="android:layout_marginRight">0.70000005dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">4dip</item>
    </style>
    
    <style name="TitleBackground">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/title_top_bg</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
    <style name="TitleName">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_centerHorizontal">true</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">17sp</item>
	    <item name="android:textColor">#ffffff</item>
	</style>
    
    <style name="TitleButtonLeft">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_marginLeft">6dip</item>
	    <item name="android:background">@drawable/back_selector</item>
	</style>
	
	<style name="TitleButtonRight">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">5dip</item>
	    <item name="android:paddingRight">5dip</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:layout_marginRight">6dip</item>
	    <item name="android:background">@drawable/btn_selector</item>
	</style>
	
	<style name="Settings">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableRight">@drawable/hi_setting_more</item>
	    <item name="android:textColor">@color/default_text</item>
	    <item name="android:drawablePadding">10dip</item>
	    <item name="android:textSize">17sp</item>
	    <item name="android:padding">10dip</item>
	    <item name="android:focusable">true</item>
	    <item name="android:clickable">true</item>
	</style>
	
	<style name="normal">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="EditTextMargin">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:background">#00000000</item>
	    <item name="android:layout_marginLeft">10dip</item>
	</style>

</resources>